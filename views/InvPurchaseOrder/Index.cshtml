    //    $(".total").each(function () {

    //        pricety = parseFloat($(this).closest("tr").find('td:eq(10) input').val());
    //       // $('#txtTotalQty').val(pricety = +pricety);
    //        $('#txtTotalQty').val(sumColumn('td:eq(10) input'));
